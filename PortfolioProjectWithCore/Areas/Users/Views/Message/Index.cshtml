    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Message Box</h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Subject</th>
                            <th>Gönderen</th>
                            <th>Message Details</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
@*                             if (item.Status == "New Content")
                            {
                                color = "badge badge-danger";
                            }
                            else if (item.Status == "New Video")
                            {
                                color = "badge badge-warning";
                            }
                            else if (item.Status == "Workshop")
                            {
                                color = "badge badge-info";
                            }
                            else if (item.Status == "New Speech")
                            {
                                color = "badge badge-success";
                            }
                            else if (item.Status == "Bootcamp")
                            {
                                color = "badge badge-primary";
                            }  *@

                            <tr>
                                <td>@item.WriterMessageID</td>
                                <td>@item.Subject</td>
                                <td>@(((DateTime)item.Date).ToString("dd-MMM-yyyy"))</td>
                                <td><a href="/Users/Default/Details/@item.WriterMessageID" class="badge badge-primary">Show Message</a></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
