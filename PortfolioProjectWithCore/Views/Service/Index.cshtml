@using EntityLayer.Concrete
@model List<Service>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Service Control Table</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort">#</th>
                <th scope="col" class="sort">Title</th>
                <th scope="col" class="sort">Image</th>
                <th scope="col" class="sort">Edit</th>
                <th scope="col" class="sort">Delete</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.ServiceID
                    </th>
                    <td>
                        @item.Title
                    </td>
                    <td>
                        <img class="avatar  mr-3" style="height:70px; width:180px" src="@item.ImageUrl" />
                    </td>
                    <td>
                        <div>
                            <a href="/Service/EditService/@item.ServiceID" class="btn btn-sm btn-neutral">Edit</a>
                        </div>
                    </td>
                    <td>
                        <div>
                            <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-sm btn-neutral">Delete</a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <div class="m-2">
        <a href="/Service/AddService/" class="btn btn-md btn-neutral">Add New Service</a>
    </div>
</div>

