@using EntityLayer.Concrete
@model List<Experience>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="card-header border-0">
    <h3 class="mb-0">Experience Control Table</h3>
</div>
<!-- Light table -->
<div class="table-responsive">
    <table class="table align-items-center table-flush">
        <thead class="thead-light">
            <tr>
                <th scope="col" class="sort">#</th>
                <th scope="col" class="sort">Name</th>
                <th scope="col" class="sort">Date</th>
                <th scope="col" class="sort">Edit</th>
                <th scope="col" class="sort">Delete</th>
            </tr>
        </thead>
        <tbody class="list">
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @item.ExperienceID
                    </th>
                    <td>
                        @item.Name
                    </td>
                    <td>
                        @item.Date
                    </td>
                    <td>
                        <div>
                            <a href="/Experience/EditExperience/@item.ExperienceID" class="btn btn-sm btn-neutral">Edit</a>
                        </div>
                    </td>
                    <td>
                        <div>
                            <a href="/Experience/DeleteExperience/@item.ExperienceID" class="btn btn-sm btn-neutral">Delete</a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
    <div class="m-2">
        <a href="/Experience/AddExperience/" class="btn btn-md btn-neutral">Add New Experience</a>
    </div>
</div>