@model EntityLayer.Concrete.Portfolio

@{
    ViewData["Title"] = "EditPortfolio";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<style>
    #imagePreview img {
        width: 150px;
        height: 150px;
        object-fit: cover;
    }

    label {
        font-size: 13px; /* veya istediğiniz boyut */
    }

    .field-validation-error {
        color: #dc3545; /* Red color for error messages */
        font-size: 13px; /* Adjust the font size */
        margin-top: 5px; /* Add some space above the error message */
    }

    .file-upload {
        display: none;
    }
</style>

<div class="Container">
    <div class="card-header">
        <h3 class="mb-0">Service Editting Page</h3>
    </div>

    @using (Html.BeginForm("EditPortfolio", "Portfolio", FormMethod.Post, new { @class = "p-3", enctype = "multipart/form-data" }))
    {
        @Html.HiddenFor(x=>x.PortfolioID)

        @Html.Label("Project Title")
        @Html.TextBoxFor(x=>x.Name, new {@class ="form-control mb-2"})
        @Html.ValidationMessageFor(x=>x.Name)
        <br />

        @Html.Label("Project Link")
        @Html.TextBoxFor(x=>x.DirectionLink, new {@class ="form-control mb-2"})
        @Html.ValidationMessageFor(x=>x.DirectionLink)
        <br />

        <label for="ImageUrl">Image</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" name="ImageUrl" >
            <label class="custom-file-label" for="ImageUrl" id="fileLabel1">@Model.ImageUrl</label>
        </div>
        <div id="imagePreview1" class="mt-2"></div>
        <br />

        <label for="BiggerImageUrl">Big Image</label>
        <div class="custom-file">
            <input type="file" class="custom-file-input" name="BiggerImageUrl">
            <label class="custom-file-label" for="BiggerImageUrl" id="fileLabel2">@Model.BiggerImageUrl</label>
        </div>
        <div id="imagePreview2" class="mt-2"></div>


        <div class="mt-3">
            <button class="btn btn-md btn-primary">Save Portfolio</button>
        </div>
    }


</div>
